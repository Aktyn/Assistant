{
	"name": "@aktyn-assistant/core",
	"version": "0.1.0",
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsc -p ./tsconfig.json",
		"dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start\" -e ts",
		"start": "node ./dist/index.js",
		"test": "jest",
		"test:ci": "jest --collectCoverage -ci",
		"test:watch": "jest --watch",
		"format": "prettier --write src/**/*{.ts,.tsx}",
		"lint": "eslint src/**/*.ts --fix",
		"env": "shx cp ./example.env ./.env",
		"typecheck": "tsc --noEmit --skipLibCheck"
	},
	"dependencies": {
		"@aktyn-assistant/common": "^0.1.0",
		"@aktyn-assistant/terminal-interface": "^0.1.0",
		"appdata-path": "^1.0.0",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"node-notifier": "^10.0.1",
		"openai": "^4.47.3"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node-notifier": "^8.0.5",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"@typescript-eslint/parser": "^7.12.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.7",
		"nodemon": "^3.1.3",
		"prettier": "^3.3.0",
		"prettier-eslint": "^16.3.0",
		"shx": "^0.3.4",
		"ts-jest": "^29.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	}
}
