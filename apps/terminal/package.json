{
	"name": "@aktyn-assistant/terminal",
	"version": "0.1.0",
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsc -p ./tsconfig.json",
		"start": "node ./dist/index.js",
		"dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start || exit 1\" -e ts",
		"test": "jest",
		"test:ci": "jest --collectCoverage",
		"test:watch": "jest --watch",
		"format": "prettier --write src/**/*{.ts,.tsx}",
		"lint": "eslint src/**/*.ts --fix",
		"typecheck": "tsc --noEmit --skipLibCheck"
	},
	"dependencies": {
		"@aktyn-assistant/common": "^0.1.0",
		"@aktyn-assistant/core": "^0.1.0",
		"terminal-kit": "^3.1.1"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.2",
		"@types/terminal-kit": "^2.5.6",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"@typescript-eslint/parser": "^7.12.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"nodemon": "^3.1.3",
		"prettier": "^3.3.0",
		"prettier-eslint": "^16.3.0",
		"ts-jest": "^29.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	}
}
