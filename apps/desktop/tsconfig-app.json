{
  "include": [
    "./src/app"
  ],
  "exclude": [
    "./node_modules",
    "./dist-app",
    "./dist-ui"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "outDir": "./dist-app",
    "rootDir": "./src/app",
    "baseUrl": "./src/app",
    "paths": {
      "~/*": [
        "./src/app/*"
      ]
    },
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "rootDir": "./src/app"
    }
  }
}