{
  "name": "aktyn-assistant-desktop",
  "version": "0.1.0",
  "private": true,
  "author": "Rados≈Çaw Krajewski (Aktyn) <aktyn3@gmail.com>",
  "description": "Aktyn Assistant is an application that allows you to interact with an AI on various types of devices while performing regular tasks.",
  "main": "./dist-app/index.js",
  "homepage": "https://github.com/Aktyn/aktyn-assistants",
  "scripts": {
    "package": "cross-env DEBUG=electron-packager electron-forge package --verbose",
    "make": "./fix-modules.sh && electron-forge make && shx rm -rf ./node_modules",
    "build:app": "tsc -p ./tsconfig-app.json",
    "build:ui": "tsc -p ./tsconfig-ui.json",
    "build": "yarn run build:app && yarn run build:ui",
    "start:no-electron": "node ./dist-app/index.js",
    "start:legacy": "electron ./dist-app/index.js",
    "start": "electron-forge start",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start:legacy || exit 1\" -e ts,html",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --collectCoverage --passWithNoTests",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@aktyn-assistant/common": "^0.1.0",
    "@aktyn-assistant/core": "^0.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-flatpak": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/animejs": "^3.1.12",
    "@types/electron-squirrel-startup": "^1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.0",
    "prettier-eslint": "^16.3.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}