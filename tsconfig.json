{
	"include": [
		"./src/index.ts"
	],
	"exclude": [
		"./node_modules",
		"./lib"
	],
	"compilerOptions": {
		"target": "ES2020",                       
		"module": "commonjs",   
		"moduleResolution": "node",                  
		"lib": ["es6", "dom"],
		
		"allowJs": true,
		"declaration": true,
		"outDir": "./lib",
		"removeComments": true,
		
		"strict": true,                           
		"noImplicitAny": true,
		"strictFunctionTypes": true,           
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,             
		"noFallthroughCasesInSwitch": true,
		
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true            
	}
}