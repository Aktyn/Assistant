{
	"include": [
		"./src/index.ts"
	],
	"exclude": [
		"./node_modules",
		"./lib"
	],
	"compilerOptions": {
		"target": "ES2018",                          
		"module": "commonjs",                     
		"lib": ["es6", "dom"],
		
		"declaration": true,
		"outDir": "./lib",
		"removeComments": true,
		
		"strict": true,                           
		"noImplicitAny": true,
		"strictFunctionTypes": true,           
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,             
		"noFallthroughCasesInSwitch": true,
		
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true                 
	}
}